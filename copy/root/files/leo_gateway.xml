<service_bundle type='manifest' name='leo_gateway'>
  <service
      name='leofs/gateway'
      type='service'
      version='1.1.1'>
    <create_default_instance enabled='false' />
    <single_instance />
    <dependency
        name='net-loopback'
        grouping='require_all'
        restart_on='none'
        type='service'>
      <service_fmri value='svc:/network/loopback' />
    </dependency>

    <dependency
        name='net-physical'
        grouping='require_all'
        restart_on='none'
        type='service'>
      <service_fmri value='svc:/network/physical' />
    </dependency>

    <dependency
        name='fs'
        grouping='require_all'
        restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>

    <dependency
        name='epmd'
        grouping='require_all'
        restart_on='none' type='service'>
      <service_fmri value='svc:/pkgsrc/epmd:default'/>
    </dependency>

    <dependency
        name='manager0'
        grouping='require_all'
        restart_on='none' type='service'>
      <service_fmri value='svc:/leofs/manager0:default'/>
    </dependency>

    <dependency
        name='manager1'
        grouping='require_all'
        restart_on='none' type='service'>
      <service_fmri value='svc:/leofs/manager1:default'/>
    </dependency>

    <exec_method
        type='method'
        name='start'
        exec='/opt/local/leofs/leo_gateway/bin/leo_gateway %m'
        timeout_seconds='30'>
      <method_context>
        <!--method_credential user='leofs' group='leofs' /-->
        <method_environment>
          <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/leo_gateway'/>
          <!--envvar name='http_proxy' value='http://10.0.0.1'/-->
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method
        name='restart'
        type='method'
        exec='/opt/local/leofs/leo_gateway/bin/leo_gateway %m'
        timeout_seconds='120'>
      <method_context>
        <!--method_credential user='leofs' group='leofs' /-->
        <method_environment>
          <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/leo_gateway'/>
          <!--envvar name='http_proxy' value='http://10.0.0.1'/-->
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method
        name='stop'
        type='method'
        exec='/opt/local/leofs/leo_gateway/bin/leo_gateway %m'
        timeout_seconds='120'>
      <method_context>
        <!--method_credential user='leofs' group='leofs' /-->
        <method_environment>
          <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/leo_gateway'/>
          <!--envvar name='http_proxy' value='http://10.0.0.1'/-->
        </method_environment>
      </method_context>
    </exec_method>

    <template>
      <common_name>
        <loctext xml:lang='C'>
          LeoFS gateway.
        </loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
